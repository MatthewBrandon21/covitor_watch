<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:padding="30dp"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/homeText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Hi there,"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/homeText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="what you want to check?"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeText1" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeText2">

        <ImageButton
            android:id="@+id/heartRateBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginStart="20dp"
            android:background="@drawable/round_corner"
            android:backgroundTint="#BCE4FF"
            android:scaleType="fitCenter"
            android:src="@drawable/heart_rate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/oxygenSaturationBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/round_corner"
            android:backgroundTint="#BCE4FF"
            android:scaleType="fitCenter"
            android:src="@drawable/oxygen_saturation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/heartRateBtn" />

        <ImageButton
            android:id="@+id/temperatureBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/round_corner"
            android:backgroundTint="#BCE4FF"
            android:scaleType="fitCenter"
            android:src="@drawable/temperature"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oxygenSaturationBtn" />

        <Button
            android:id="@+id/button4"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="#BCE4FF"
            android:text="Heart Rate"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="#3C3C3C"
            app:cornerRadius="18dp"
            app:layout_constraintStart_toEndOf="@+id/heartRateBtn"
            tools:layout_editor_absoluteY="10dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="#BCE4FF"
            android:text="Oxygen Saturation"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="#3C3C3C"
            app:cornerRadius="18dp"
            app:layout_constraintStart_toEndOf="@+id/oxygenSaturationBtn"
            tools:layout_editor_absoluteY="100dp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="#BCE4FF"
            android:text="Temperature"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="#3C3C3C"
            app:cornerRadius="18dp"
            app:layout_constraintStart_toEndOf="@+id/temperatureBtn"
            tools:layout_editor_absoluteY="191dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>